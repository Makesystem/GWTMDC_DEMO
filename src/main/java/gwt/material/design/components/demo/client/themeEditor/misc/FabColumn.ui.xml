<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:style>
	.buttons__content {
		width: 100%;
		margin-top: 24px;
		overflow: visible;
	}
	
	.buttons__content>* {
		margin: 8px;
	}
	</ui:style>


	<!-- +++++++++++++ -->
	<!-- Color Palette -->
	<!-- +++++++++++++ -->
	<m:MaterialContent width="100vw" minWidth="380px"
		maxWidth="400px" minHeight="380px" elevation="Z_5" margin="16"
		padding="24" borderRadius="8" backgroundColor="MDC_THEME_BACKGROUND" overflow="VISIBLE">

		<m:MaterialLabel text="FAB" typography="HEADLINE_5"
			width="100%" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialFab icon="FAVORITE" />
			<m:MaterialFab icon="FAVORITE" type="MINI" />
			<m:MaterialFab icon="ADD" text="CREATE" />
			<m:MaterialFab icon="ADD" text="CREATE" rtl="true" />
			<m:MaterialFab text="CREATE" />
		</m:MaterialContent>

		<m:MaterialLabel text="Checkbox" typography="HEADLINE_5"
			width="100%" marginTop="64" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialCheckbox text="Default" value="true" />
			<m:MaterialCheckbox text="Indeterminate"
				indeterminate="true" />
			<m:MaterialCheckbox text="Disabled" enabled="false" />
			<m:MaterialCheckbox text="Disabled" enabled="false"
				value="true" />
		</m:MaterialContent>

		<m:MaterialLabel text="Radio Button" typography="HEADLINE_5"
			width="100%" marginTop="64" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialRadioButton name="radio_button"
				text="Default 1" value="true" />
			<m:MaterialRadioButton name="radio_button"
				text="Default 2" />
			<m:MaterialRadioButton name="radio_button"
				text="Disabled" enabled="false" />
			<m:MaterialRadioButton text="Disabled" enabled="false"
				value="true" />
		</m:MaterialContent>

		<m:MaterialLabel text="Switch" typography="HEADLINE_5"
			width="100%" marginTop="64" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialSwitch text="off/on" value="true" />

			<m:MaterialSwitch text="off/on" value="true"
				enabled="false" />
		</m:MaterialContent>


	</m:MaterialContent>

</ui:UiBinder> 