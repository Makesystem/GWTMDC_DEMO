<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:style>
	.buttons__content {
		width: 100%;
	}
	
	.buttons__content>* {
		margin: 8px;
	}
	</ui:style>


	<!-- +++++++++++++ -->
	<!-- Color Palette -->
	<!-- +++++++++++++ -->
	<m:MaterialContent width="100vw" minWidth="240px"
		maxWidth="400px" minHeight="380px" elevation="Z_5" margin="16"
		padding="24" borderRadius="8" backgroundColor="MDC_THEME_BACKGROUND">

		<m:MaterialLabel text="Textfield" typography="HEADLINE_5"
			width="100%" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialTextField label="Standard"
				helperTextPersistent="true" helperText="It's a help text" width="100%" />

			<m:MaterialTextField type="BOX" label="Box"
				helperTextPersistent="true" helperText="It's a help text" width="100%" />

			<m:MaterialTextField type="OUTLINED" label="Outlined"
				helperTextPersistent="true" helperText="It's a help text" width="100%" />

			<m:MaterialTextField type="FULLWIDTH"
				placeholder="Standard" helperTextPersistent="true" helperText="It's a help text" />

			<m:MaterialTextField label="Leading standard"
				icon="EVENT" iconPosition="LEADING" helperText="It's a help text"
				width="100%" />

			<m:MaterialTextField type="BOX" label="Leading standard"
				icon="EVENT" iconPosition="LEADING" helperText="It's a help text"
				width="100%" />

			<m:MaterialTextField type="OUTLINED" label="Leading standard"
				icon="EVENT" iconPosition="LEADING" helperText="It's a help text"
				width="100%" />

			<m:MaterialTextArea label="Standard textarea"
				helperTextPersistent="true" helperText="It's a help text" width="100%"/>

		</m:MaterialContent>

	</m:MaterialContent>

</ui:UiBinder> 