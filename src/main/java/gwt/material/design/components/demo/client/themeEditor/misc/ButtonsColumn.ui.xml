<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:style>
	.buttons__content {
		width: 100%;
	}
	
	.buttons__content>button {
		margin: 8px;
	}
	</ui:style>


	<!-- +++++++++++++ -->
	<!-- Color Palette -->
	<!-- +++++++++++++ -->
	<m:MaterialContent width="100vw" minWidth="380px"
		maxWidth="400px" minHeight="380px" elevation="Z_5" margin="16"
		padding="24" borderRadius="8" backgroundColor="MDC_THEME_BACKGROUND">

		<m:MaterialLabel text="Buttons" typography="HEADLINE_5"
			width="100%" />


		<m:MaterialLabel text="Primary color" typography="BODY_1"
			width="100%" marginTop="36" />

		<m:MaterialLabel text="Default" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton text="Default" />
			<m:MaterialButton text="Icon" icon="FAVORITE" />
			<m:MaterialButton text="Disabled" enabled="false" />
		</m:MaterialContent>

		<m:MaterialLabel text="Raised" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="RAISED" text="Default" />
			<m:MaterialButton type="RAISED" text="Icon" icon="FAVORITE" />
			<m:MaterialButton type="RAISED" text="Disabled"
				enabled="false" />
		</m:MaterialContent>

		<m:MaterialLabel text="Unelevated" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="UNELEVATED" text="Default" />
			<m:MaterialButton type="UNELEVATED" text="Icon"
				icon="FAVORITE" />
			<m:MaterialButton type="UNELEVATED" text="Disabled"
				enabled="false" />
		</m:MaterialContent>

		<m:MaterialLabel text="Outline" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="OUTLINE" text="Default" />
			<m:MaterialButton type="OUTLINE" text="Icon" icon="FAVORITE" />
			<m:MaterialButton type="OUTLINE" text="Disabled"
				enabled="false" />
		</m:MaterialContent>

		<m:MaterialLabel text="Icon Button" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialIconButton type="FAVORITE" />
			<m:MaterialIconButton type="FAVORITE" enabled="false" />
		</m:MaterialContent>
		
		<m:MaterialLabel text="Secondary color" typography="BODY_1"
			width="100%" marginTop="36" />

		<m:MaterialLabel text="Default" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton text="Default" textColor="MDC_THEME_SECONDARY" ripple="MDC_THEME_SECONDARY"/>
			<m:MaterialButton text="Icon" icon="FAVORITE" textColor="MDC_THEME_SECONDARY" ripple="MDC_THEME_SECONDARY"/>
		</m:MaterialContent>

		<m:MaterialLabel text="Raised" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="RAISED" text="Default" backgroundColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_ON_SECONDARY"/>
			<m:MaterialButton type="RAISED" text="Icon" icon="FAVORITE" backgroundColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_ON_SECONDARY"/> 
		</m:MaterialContent>

		<m:MaterialLabel text="Unelevated" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="UNELEVATED" text="Default" backgroundColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_ON_SECONDARY"/>
			<m:MaterialButton type="UNELEVATED" text="Icon"
				icon="FAVORITE" backgroundColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_ON_SECONDARY"/>
		</m:MaterialContent>

		<m:MaterialLabel text="Outline" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialButton type="OUTLINE" text="Default" borderColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_SECONDARY" ripple="MDC_THEME_SECONDARY"/>
			<m:MaterialButton type="OUTLINE" text="Icon" icon="FAVORITE" borderColor="MDC_THEME_SECONDARY" textColor="MDC_THEME_SECONDARY" ripple="MDC_THEME_SECONDARY"/>
		</m:MaterialContent>

		<m:MaterialLabel text="Icon Button" typography="BODY_2"
			marginTop="24" />
		<m:MaterialContent addStyleNames="{style.buttons__content}">
			<m:MaterialIconButton type="FAVORITE" textColor="MDC_THEME_SECONDARY"/>
		</m:MaterialContent>

	</m:MaterialContent>

</ui:UiBinder> 