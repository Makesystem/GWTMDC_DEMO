<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:with field='vMaskers'
		type='gwt.material.design.components.client.masker.Masker.Defaults' />

	<ui:with field='validations'
		type='gwt.material.design.components.client.validation.ValidationForTextField' />

	<ui:style>
	
	</ui:style>

	<m:MaterialLayoutGrid>
		<m:MaterialLayoutInner>

			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN" marginBottom="24">
				<m:MaterialLabel text="Tab Bar"
					typography="HEADLINE_6" />
				<m:MaterialDivider />
			</m:MaterialLayoutCell>

			<!-- Standard -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Standard" typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar>
					<m:MaterialTab text="Recents" />
					<m:MaterialTab text="Nearby" />
					<m:MaterialTab text="Favorites" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Icons -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel
					text="Tabs with icons next to labels" typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar>
					<m:MaterialTab text="Recents" icon="SCHEDULE" />
					<m:MaterialTab text="Nearby" icon="NEAR_ME" />
					<m:MaterialTab text="Favorites" icon="FAVORITE" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Stacked icons -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel
					text="Tabs with icons above labels and indicators restricted to content"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar>
					<m:MaterialTab text="Recents" icon="SCHEDULE"
						stacked="true" />
					<m:MaterialTab text="Nearby" icon="NEAR_ME"
						stacked="true" />
					<m:MaterialTab text="Favorites" icon="FAVORITE"
						stacked="true" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Only icons -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Tabs only with icons"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar>
					<m:MaterialTab icon="SCHEDULE" />
					<m:MaterialTab icon="NEAR_ME" />
					<m:MaterialTab icon="FAVORITE" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Scrolling tabs -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Scrolling tabs"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar>
					<m:MaterialTab text="Tab one" />
					<m:MaterialTab text="Tab two" />
					<m:MaterialTab text="Tab three" />
					<m:MaterialTab text="Tab four" />
					<m:MaterialTab text="Tab five" />
					<m:MaterialTab text="Tab six" />
					<m:MaterialTab text="Tab seven" />
					<m:MaterialTab text="Tab eight" />
					<m:MaterialTab text="Tab nine" />
					<m:MaterialTab text="Tab ten" />
					<m:MaterialTab text="Tab eleven" />
					<m:MaterialTab text="Tab twelve" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Start -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Align Start"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar align="START">
					<m:MaterialTab text="Recents" />
					<m:MaterialTab text="Nearby" />
					<m:MaterialTab text="Favorites" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- Center -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Align Center"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar align="CENTER">
					<m:MaterialTab text="Recents" />
					<m:MaterialTab text="Nearby" />
					<m:MaterialTab text="Favorites" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- End -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialLabel text="Align End"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar align="END">
					<m:MaterialTab text="Recents" />
					<m:MaterialTab text="Nearby" />
					<m:MaterialTab text="Favorites" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

			<!-- To Do Tests -->
			<m:MaterialLayoutCell cols="12"
				flexDirection="COLUMN">
				<m:MaterialDivider />
				<m:MaterialLabel text="Do your tests"
					typography="BODY_1" marginTop="16" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell flexDirection="COLUMN"
				desktopCols="2" tabletCols="3" phoneCols="4">
				<m:MaterialCheckbox ui:field="enabled_check"
					text="Enabled" selected="true" />
				<m:MaterialCheckbox ui:field="icon_check"
					text="Icon" />
				<m:MaterialCheckbox ui:field="stacked_check"
					text="Stacked" />
			</m:MaterialLayoutCell>
			<m:MaterialLayoutCell flexDirection="COLUMN"
				cols="4">
				<m:MaterialSelect ui:field="align_select"
					label="Align" width="100%" marginBottom="16" />
			</m:MaterialLayoutCell>
			<m:MaterialLayoutCell cols="12">
				<m:MaterialTabBar ui:field="to_do_tests_element">
					<m:MaterialTab text="Tab one" />
					<m:MaterialTab text="Tab two" />
					<m:MaterialTab text="Tab three" />
					<m:MaterialTab text="Tab four" />
					<m:MaterialTab text="Tab five" />
					<m:MaterialTab text="Tab six" />
				</m:MaterialTabBar>
			</m:MaterialLayoutCell>

		</m:MaterialLayoutInner>
	</m:MaterialLayoutGrid>

</ui:UiBinder> 