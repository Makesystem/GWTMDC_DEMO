<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:with field='vMaskers'
		type='gwt.material.design.components.client.masker.Masker.Defaults' />

	<ui:with field='validations'
		type='gwt.material.design.components.client.validation.ValidationForTextField' />

	<ui:style>
	
	</ui:style>

	<m:MaterialLayoutGrid>
		<m:MaterialLayoutInner>

			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN"
				marginBottom="24">
				<m:MaterialLabel text="Layout Grid" typography="HEADLINE_6" />
				<m:MaterialDivider />
			</m:MaterialLayoutCell>

			<!-- Standard -->
			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN">
				<m:MaterialLabel text="Standard" typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialLayoutGrid width="100%">
					<m:MaterialLayoutInner>

						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />

					</m:MaterialLayoutInner>
				</m:MaterialLayoutGrid>
			</m:MaterialLayoutCell>


			<!-- Grid Left Alignment -->
			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN">
				<m:MaterialLabel text="Grid Left Alignment"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialLayoutGrid width="75%" align="LEFT">
					<m:MaterialLayoutInner>

						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />

					</m:MaterialLayoutInner>
				</m:MaterialLayoutGrid>
			</m:MaterialLayoutCell>

			<!-- Grid Right Alignment -->
			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN">
				<m:MaterialLabel text="Grid Right Alignment"
					typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialLayoutGrid width="75%" align="RIGHT">
					<m:MaterialLayoutInner>

						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />

					</m:MaterialLayoutInner>
				</m:MaterialLayoutGrid>
			</m:MaterialLayoutCell>

			<!-- Columns Align -->
			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN">
				<m:MaterialLabel text="Columns Align" typography="BODY_1" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialLayoutGrid width="100%">
					<m:MaterialLayoutInner height="240px">

						<m:MaterialLayoutCell align="TOP"
							backgroundColor="MDC_THEME_SURFACE" height="96px" borderColor="MDC_THEME_ON_SURFACE"
							borderWidth="1" borderStyle="SOLID" />
						<m:MaterialLayoutCell align="MIDDLE"
							backgroundColor="MDC_THEME_SURFACE" height="96px" borderColor="MDC_THEME_ON_SURFACE"
							borderWidth="1" borderStyle="SOLID" />
						<m:MaterialLayoutCell align="BOTTOM"
							backgroundColor="MDC_THEME_SURFACE" height="96px" borderColor="MDC_THEME_ON_SURFACE"
							borderWidth="1" borderStyle="SOLID" />

					</m:MaterialLayoutInner>
				</m:MaterialLayoutGrid>
			</m:MaterialLayoutCell>

			<!-- To Do Tests -->
			<m:MaterialLayoutCell cols="12" flexDirection="COLUMN">
				<m:MaterialDivider />
				<m:MaterialLabel text="Do your tests" typography="BODY_1"
					marginTop="16" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="4" flexDirection="COLUMN">
				<m:MaterialTextField ui:field="cell_margin_phone_field"
					label="Cell Margin on Phone"  width="100%"
					inputType="NUMBER" />
				<m:MaterialTextField ui:field="cell_gutter_phone_field"
					label="Cell Gutter on Phone" width="100%"
					inputType="NUMBER" />
				<m:MaterialTextField ui:field="gap_phone_field"
					label="Gap on Phone" width="100%" inputType="NUMBER" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="4" flexDirection="COLUMN">
				<m:MaterialTextField ui:field="cell_margin_tablet_field"
					label="Cell Margin on Tablet"  width="100%"
					inputType="NUMBER" />
				<m:MaterialTextField ui:field="cell_gutter_tablet_field"
					label="Cell Gutter on Tablet"
					width="100%" inputType="NUMBER" />
				<m:MaterialTextField ui:field="gap_tablet_field"
					label="Gap on Tablet" width="100%" inputType="NUMBER" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="4" flexDirection="COLUMN">
				<m:MaterialTextField ui:field="cell_margin_desktop_field"
					label="Cell Margin on Desktop"
					width="100%" inputType="NUMBER" />
				<m:MaterialTextField ui:field="cell_gutter_desktop_field"
					label="Cell Gutter on Desktop"
					width="100%" inputType="NUMBER" />
				<m:MaterialTextField ui:field="gap_desktop_field"
					label="Gap on Desktop" width="100%" inputType="NUMBER" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell flexDirection="COLUMN"
				desktopCols="2" tabletCols="3" phoneCols="4">
				<m:MaterialSelect ui:field="align_select" label="Align"
					width="100%" />
			</m:MaterialLayoutCell>

			<m:MaterialLayoutCell cols="12">
				<m:MaterialLayoutGrid ui:field="to_do_tests_element"
					width="75%">
					<m:MaterialLayoutInner>

						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />
						<m:MaterialLayoutCell backgroundColor="MDC_THEME_SURFACE"
							height="96px" borderColor="MDC_THEME_ON_SURFACE" borderWidth="1"
							borderStyle="SOLID" />

					</m:MaterialLayoutInner>
				</m:MaterialLayoutGrid>
			</m:MaterialLayoutCell>

		</m:MaterialLayoutInner>
	</m:MaterialLayoutGrid>

</ui:UiBinder> 