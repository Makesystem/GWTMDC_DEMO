<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>

	<m:MaterialContent ui:field="content" flex="NONE"
		width="auto" flexWrap="NOWRAP" height="100%">

		<m:MaterialContent minWidth="480px" height="calc(100% - 20px)"
			backgroundColor="MDC_THEME_BACKGROUND" borderColor="GRAY"
			borderWidth="1" borderStyle="SOLID" margin="8">

			<m:MaterialTopAppBar layoutPosition="RELATIVE">
				<m:MaterialTopAppBarRow>
					<m:MaterialTopAppBarSection align="START">
						<m:MaterialTopAppBarIcon type="MENU" />
						<m:MaterialTopAppBarTitle text="Charts" />
					</m:MaterialTopAppBarSection>
				</m:MaterialTopAppBarRow>
			</m:MaterialTopAppBar>


			<m:MaterialContent width="100%" padding="16"
				flexDirection="COLUMN" flexAlignItems="START">

				<m:MaterialLabel text="Number of series" />
				<m:MaterialSlider ui:field="charts__number_of_series__slider"
					min="1.0" max="26.0" value="4.0" step="1.0" markers="true" />
				<m:MaterialContent>
					<m:MaterialCheckbox ui:field="charts__reverse_data__checkbox"
						selected="false" text="Reverse data" />
					<m:MaterialCheckbox ui:field="charts__show_tooltip__checkbox"
						selected="false" text="Show tooltip" />
						
				</m:MaterialContent>
				<m:MaterialCheckbox ui:field="charts__animated__checkbox"
						selected="false" text="Animated" />
				<m:MaterialSlider ui:field="charts__animation_duration__slider"
					min="100.0" max="1000.0" value="250.0" step="50.0" markers="true" />

			</m:MaterialContent>

		</m:MaterialContent>

		<!-- PIE CHART -->
		<m:MaterialContent minWidth="480px" height="calc(100% - 20px)"
			backgroundColor="MDC_THEME_BACKGROUND" borderColor="GRAY"
			borderWidth="1" borderStyle="SOLID" margin="8">

			<m:MaterialTopAppBar layoutPosition="RELATIVE">
				<m:MaterialTopAppBarRow>
					<m:MaterialTopAppBarSection align="START">
						<m:MaterialTopAppBarIcon type="MENU" />
						<m:MaterialTopAppBarTitle text="PIE" />
					</m:MaterialTopAppBarSection>
				</m:MaterialTopAppBarRow>
			</m:MaterialTopAppBar>


			<m:MaterialContent width="100%" padding="16"
				flexDirection="COLUMN" flexAlignItems="START">

				<m:MaterialContent ui:field="pie_chart__type__content"
					width="100%" />
				<m:MaterialContent ui:field="pie_chart__label_position__content"
					width="100%" />
				<m:MaterialContent ui:field="pie_chart__label_direction__content"
					width="100%" />

				<m:MaterialLabel text="Label offset" marginTop="16" />
				<m:MaterialSlider ui:field="pie_chart__label_offset__slider"
					min="0.0" max="48.0" value="0.0" step="2.0" markers="true" />

				<m:MaterialLabel text="Start angle" marginTop="16" />
				<m:MaterialSlider ui:field="pie_chart__start_angle__slider"
					min="0.0" max="360.0" value="270.0" step="10.0" markers="true" />

				<m:MaterialLabel text="Donut width" marginTop="16" />
				<m:MaterialSlider ui:field="pie_chart__donut_width__slider"
					min="6.0" max="96.0" value="36.0" step="6.0" markers="true" />

				<m:MaterialLabel text="Chart padding" marginTop="16" />
				<m:MaterialSlider ui:field="pie_chart__chart_padding__slider"
					min="0.0" max="48.0" value="0.0" step="2.0" markers="true" />

				<m:MaterialContent>
					<m:MaterialCheckbox ui:field="pie_chart__show_label__checkbox"
						selected="true" text="Show label" />
					<m:MaterialCheckbox ui:field="pie_chart__ignore_empty_values__checkbox"
						selected="false" text="Ignore empty values" />
				</m:MaterialContent>

				<m:MaterialPieChart ui:field="pie_chart"
					type="DONUT" marginTop="48" />

			</m:MaterialContent>

		</m:MaterialContent>

		<!-- LINE CHART -->

		<m:MaterialContent minWidth="540px" height="calc(100% - 20px)"
			backgroundColor="MDC_THEME_BACKGROUND" borderColor="GRAY"
			borderWidth="1" borderStyle="SOLID" margin="8">

			<m:MaterialTopAppBar layoutPosition="RELATIVE">
				<m:MaterialTopAppBarRow>
					<m:MaterialTopAppBarSection align="START">
						<m:MaterialTopAppBarIcon type="MENU" />
						<m:MaterialTopAppBarTitle text="LINE" />
					</m:MaterialTopAppBarSection>
				</m:MaterialTopAppBarRow>
			</m:MaterialTopAppBar>


			<m:MaterialContent width="100%" flexDirection="COLUMN"
				flexAlignItems="START">

				<m:MaterialContent width="100%" padding="16"
					paddingBottom="0">
					<m:MaterialCheckbox ui:field="line_chart__full_width__checkbox"
						selected="true" text="Full width" />
					<m:MaterialCheckbox ui:field="line_chart__line_smooth__checkbox"
						selected="true" text="Line smooth" />
					<m:MaterialCheckbox ui:field="line_chart__enable_zoom__checkbox"
						selected="false" text="Enable zoom" />
				</m:MaterialContent>
				<m:MaterialContent width="100%" padding="16"
					paddingTop="0">
					<m:MaterialCheckbox ui:field="line_chart__show_line__checkbox"
						selected="true" text="Show line" />
					<m:MaterialCheckbox ui:field="line_chart__show_point__checkbox"
						selected="true" text="Show point" />
					<m:MaterialCheckbox ui:field="line_chart__show_point_label__checkbox"
						selected="false" text="Show point label" />
					<m:MaterialCheckbox ui:field="line_chart__show_area__checkbox"
						selected="false" text="Show area" />
					<m:MaterialCheckbox ui:field="line_chart__show_grid_background__checkbox"
						selected="false" text="Show grid background" />
				</m:MaterialContent>

				<m:MaterialContent width="100%">
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding top" />
						<m:MaterialSlider ui:field="line_chart__padding_top__slider"
							min="0.0" max="48.0" value="15.0" step="1.0" markers="true" />
					</m:MaterialContent>
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding right" />
						<m:MaterialSlider ui:field="line_chart__padding_right__slider"
							min="0.0" max="48.0" value="15.0" step="1.0" markers="true" />
					</m:MaterialContent>
				</m:MaterialContent>

				<m:MaterialContent width="100%">
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding bottom" />
						<m:MaterialSlider ui:field="line_chart__padding_bottom__slider"
							min="0.0" max="48.0" value="5.0" step="1.0" markers="true" />
					</m:MaterialContent>
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding left" />
						<m:MaterialSlider ui:field="line_chart__padding_left__slider"
							min="0.0" max="48.0" value="10.0" step="1.0" markers="true" />
					</m:MaterialContent>
				</m:MaterialContent>


				<m:MaterialContent width="100%" padding="16">
					<m:MaterialLabel text="Axis X" width="100%" />
					<m:MaterialCheckbox ui:field="line_chart__axis_x_grid__checkbox"
						selected="true" text="Grid" />
					<m:MaterialCheckbox ui:field="line_chart__axis_x_label__checkbox"
						selected="true" text="Label" />
					<m:MaterialContent ui:field="line_chart__axis_x_position__content" />
				</m:MaterialContent>


				<m:MaterialContent width="100%" padding="16">
					<m:MaterialLabel text="Axis Y" width="100%" />
					<m:MaterialCheckbox ui:field="line_chart__axis_y_only_integer__checkbox"
						selected="false" text="Only interge" />
					<m:MaterialCheckbox ui:field="line_chart__axis_y_grid__checkbox"
						selected="true" text="Grid" />
					<m:MaterialCheckbox ui:field="line_chart__axis_y_label__checkbox"
						selected="true" text="Label" />
					<m:MaterialContent ui:field="line_chart__axis_y_position__content" />
					<m:MaterialLabel text="Scale min space" width="100%" />
					<m:MaterialSlider ui:field="line_chart__axis_y__scale_min_space__slider"
						min="0.0" max="48.0" value="20.0" step="2.0" markers="true"
						width="calc(100% - 32px)" />
				</m:MaterialContent>

				<m:MaterialContent padding="16">
					<m:MaterialLabel text="High and Low values" width="100%"
						marginBottom="16" />
					<m:MaterialTextField ui:field="line_chart__high__textfield"
						label="High" marginRight="8" />
					<m:MaterialTextField ui:field="line_chart__low__textfield"
						label="Low" marginLeft="8" />
				</m:MaterialContent>

				<m:MaterialLineChart ui:field="line_chart"
					marginTop="48" />

			</m:MaterialContent>
		</m:MaterialContent>

		<!-- BAR CHART -->

		<m:MaterialContent minWidth="540px" height="calc(100% - 20px)"
			backgroundColor="MDC_THEME_BACKGROUND" borderColor="GRAY"
			borderWidth="1" borderStyle="SOLID" margin="8">

			<m:MaterialTopAppBar layoutPosition="RELATIVE">
				<m:MaterialTopAppBarRow>
					<m:MaterialTopAppBarSection align="START">
						<m:MaterialTopAppBarIcon type="MENU" />
						<m:MaterialTopAppBarTitle text="BAR" />
					</m:MaterialTopAppBarSection>
				</m:MaterialTopAppBarRow>
			</m:MaterialTopAppBar>


			<m:MaterialContent width="100%" flexDirection="COLUMN"
				flexAlignItems="START">

				<m:MaterialContent width="100%" padding="16"
					paddingBottom="0">
					<m:MaterialCheckbox ui:field="bar_chart__distribute_series__checkbox"
						selected="false" text="Distribute series" />
					<m:MaterialCheckbox ui:field="bar_chart__horizontal_bars__checkbox"
						selected="false" text="Horizontal bars" />
					<m:MaterialCheckbox ui:field="bar_chart__stack_bars__checkbox"
						selected="false" text="Stack bars" />

					<m:MaterialLabel text="Series bar distance" width="100%" />
					<m:MaterialSlider ui:field="bar_chart__series_bar_distance__slider"
						min="0.0" max="48.0" value="15.0" step="1.0" markers="true"
						width="calc(100% - 32px)" />

				</m:MaterialContent>
				<m:MaterialContent width="100%" padding="16"
					paddingTop="0">
					<m:MaterialCheckbox ui:field="bar_chart__show_bar_label__checkbox"
						selected="false" text="Show bar label" />
					<m:MaterialCheckbox ui:field="bar_chart__show_grid_background__checkbox"
						selected="false" text="Show grid background" />
				</m:MaterialContent>

				<m:MaterialContent width="100%">
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding top" />
						<m:MaterialSlider ui:field="bar_chart__padding_top__slider"
							min="0.0" max="48.0" value="15.0" step="1.0" markers="true" />
					</m:MaterialContent>
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding right" />
						<m:MaterialSlider ui:field="bar_chart__padding_right__slider"
							min="0.0" max="48.0" value="15.0" step="1.0" markers="true" />
					</m:MaterialContent>
				</m:MaterialContent>

				<m:MaterialContent width="100%">
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding bottom" />
						<m:MaterialSlider ui:field="bar_chart__padding_bottom__slider"
							min="0.0" max="48.0" value="5.0" step="1.0" markers="true" />
					</m:MaterialContent>
					<m:MaterialContent padding="16" flex="ONE">
						<m:MaterialLabel text="Chart padding left" />
						<m:MaterialSlider ui:field="bar_chart__padding_left__slider"
							min="0.0" max="48.0" value="10.0" step="1.0" markers="true" />
					</m:MaterialContent>
				</m:MaterialContent>


				<m:MaterialContent width="100%" padding="16">
					<m:MaterialLabel text="Axis X" width="100%" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_x_only_integer__checkbox"
						selected="false" text="Only interge" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_x_grid__checkbox"
						selected="true" text="Grid" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_x_label__checkbox"
						selected="true" text="Label" />
					<m:MaterialContent ui:field="bar_chart__axis_x_position__content" />
					<m:MaterialLabel text="Scale min space" width="100%" />
					<m:MaterialSlider ui:field="bar_chart__axis_x__scale_min_space__slider"
						min="0.0" max="48.0" value="20.0" step="2.0" markers="true"
						width="calc(100% - 32px)" />
				</m:MaterialContent>


				<m:MaterialContent width="100%" padding="16">
					<m:MaterialLabel text="Axis Y" width="100%" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_y_only_integer__checkbox"
						selected="false" text="Only interge" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_y_grid__checkbox"
						selected="true" text="Grid" />
					<m:MaterialCheckbox ui:field="bar_chart__axis_y_label__checkbox"
						selected="true" text="Label" />
					<m:MaterialContent ui:field="bar_chart__axis_y_position__content" />
					<m:MaterialLabel text="Scale min space" width="100%" />
					<m:MaterialSlider ui:field="bar_chart__axis_y__scale_min_space__slider"
						min="0.0" max="48.0" value="20.0" step="2.0" markers="true"
						width="calc(100% - 32px)" />
				</m:MaterialContent>

				<m:MaterialContent padding="16">
					<m:MaterialLabel text="High and Low values" width="100%"
						marginBottom="16" />

					<m:MaterialTextField ui:field="bar_chart__high__textfield"
						label="High" marginRight="8" />

					<m:MaterialTextField ui:field="bar_chart__low__textfield"
						label="Low" marginLeft="8" marginRight="8" />

					<m:MaterialTextField ui:field="bar_chart__reference__textfield"
						label="Reference" marginLeft="8" />

				</m:MaterialContent>

				<m:MaterialBarChart ui:field="bar_chart"
					marginTop="48" />

			</m:MaterialContent>

		</m:MaterialContent>

	</m:MaterialContent>
</ui:UiBinder> 