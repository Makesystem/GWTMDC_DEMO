<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.components.client.ui">

	<ui:style>
	.buttons__content {
		width: 100%;
	}
	
	</ui:style>


	<!-- +++++++++++++ -->
	<!-- Color Palette -->
	<!-- +++++++++++++ -->
	<m:MaterialContent width="100vw" minWidth="380px"
		maxWidth="400px" minHeight="380px" elevation="Z_5" margin="16"
		padding="24" borderRadius="8" backgroundColor="MDC_THEME_BACKGROUND">

		<m:MaterialLabel text="Scrolled Tab Bar" typography="HEADLINE_5"
			width="100%" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">

			<m:MaterialTabScroller>
			
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
				<m:MaterialTab text="Tab" />
			
			</m:MaterialTabScroller>

		</m:MaterialContent>

		<m:MaterialLabel text="Linear Progress" typography="HEADLINE_5"
			width="100%" marginTop="48" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">

			<m:MaterialLinearProgress progress="0.5"
				marginTop="16" marginBottom="16" />

			<m:MaterialLinearProgress indeterminate="true"
				marginBottom="16" />

			<m:MaterialLinearProgress progress="0.5"
				buffer="0.75" marginBottom="16" />

		</m:MaterialContent>

		<m:MaterialLabel text="Slider" typography="HEADLINE_5"
			width="100%" marginTop="48" />

		<m:MaterialContent addStyleNames="{style.buttons__content}">
 
			<m:MaterialSlider ui:field="slider__default" min="0.0"
				max="100.0" value="50.0" step="1.0" marginTop="16" marginBottom="16" />

		</m:MaterialContent>


	</m:MaterialContent>

</ui:UiBinder> 